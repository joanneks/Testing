{{#extends 'base'}}
{{#block 'content'}}

    <table class="table">
        <thead>
    
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Plot</th>

        </tr>
    </thead>
    {{#each allMovies}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.plot}}</td>
            <td>
                <a href="/movie/edit/{{this.id}}" class="btn btn-primary">Edit</a>
            </td>
            <td>
                <a href="/movie/delete/{{this.id}}" class="btn btn-danger">Delete</a>
            </td>
        </tr>

    {{/each}}
    </table>
{{/block}}
{{/extends}}